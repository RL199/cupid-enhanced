{
    "manifest_version": 3,
    "name": "Cupid Enhanced",
    "version": "1.1.0",
    "description": "Enhances the OkCupid platform for better usability and features.",
    "icons": {
        "16": "assets/icons/icon-16.png",
        "32": "assets/icons/icon-32.png",
        "48": "assets/icons/icon-48.png",
        "128": "assets/icons/icon-128.png"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icons/icon-16.png",
            "32": "assets/icons/icon-32.png",
            "48": "assets/icons/icon-48.png",
            "128": "assets/icons/icon-128.png"
        },
        "default_title": "Cupid Enhanced Settings"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.okcupid.com/*"
            ],
            "js": [
                "scripts/api-interceptor.js"
            ],
            "run_at": "document_start",
            "all_frames": true,
            "world": "MAIN"
        },
        {
            "matches": [
                "https://www.okcupid.com/*"
            ],
            "js": [
                "scripts/okcupid-content.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ]
}
